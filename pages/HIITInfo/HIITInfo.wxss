/* 带图片弹窗模板B */

.modal {
    background-color: rgba(0, 0, 0, 0.4);
    position: fixed;
    flex-direction: column;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9998;
}

.result-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    width: 60%;
    height: 30%;
    background-color: white;
    border-radius: 10rpx;
}

.title {
    font-size: 34rpx;
    color: black;
    text-align: center;
    margin-top: 30rpx;
}

.content {
    margin-top:30rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    font-size: 30rpx;
    color: #888888;
}

.modal-btn-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid rgba(7,17,27,0.1);
    width: 100%;
}

.cancel-btn, .confirm-btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    width: 100%;
}

.cancel-btn {
    border-right: 1rpx solid rgba(7,17,27,0.1);
}
