.bindSuccess-top{
    width: 100%;
    height: 431rpx;
    text-align: center;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-image: url('https://img.hipee.cn/hibreath/icon/bigBg.jpg');
}
.bind-text{
    font-family: PingFang-SC;
    color: #fff;
    font-size: 50rpx;
}
.bindSuccess-img{
    width: 200rpx;
    height: 200rpx;
    /*  margin-top: 40rpx;
      margin-bottom: 25rpx;*/
    margin: 40rpx auto 25rpx auto;
}
.bindSuccess-bto{
    padding: 80rpx 70rpx 0rpx 70rpx;
    position: relative;
    top: -60rpx;
    border-radius: 60rpx 60rpx 0 0;
    border: 1px #fff solid;
    z-index: 2;
    background: #fff;
}
.bindSuccess-btoText1{
    font-family: PingFang-SC;
    font-size: 40rpx;
    color: #454545;
    text-align: center;
    margin-bottom: 30rpx;
}
.bindSuccess-btoText2{
    font-family: PingFang-SC;
    font-size: 30rpx;
    color: #7C7C7C;
    text-align: center;

}
.bindSuccess-btoLine{
    margin-top: 55rpx;
    width: 100%;
    border: 0.5rpx #f2f2f2 solid;

}
.slide-text{
    font-family: PingFang-SC;
    font-size: 30rpx;
    color: #7C7C7C;

}
.bindSuccess-swiper{
    text-align: center;
    padding: 62rpx 40rpx 0rpx 40rpx;
}
/*用来包裹所有的小圆点 */
.dots {
    width: 100%;
    height: 5rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: -50rpx;
}
/*未选中时的小圆点样式 */
.dot {
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background-color:#D8D8D8;
    margin-right: 30rpx;
}
/*选中以后的小圆点样式 */
.active {
    width: 15rpx;
    height: 15rpx;
    margin-right: 30rpx;
    border-radius: 50%;
    background-color:#7BC877;
}
.bindSuccess-btn{
    width:500rpx;
    height:100rpx;
    background:#7BC877;
    border-radius:50rpx;
    text-align: center;
    margin: 54rpx auto 20rpx auto;
    color: #fff;
    font-family: PingFang-SC;
    line-height: 100rpx;
}
.bindSuccess-text{
    color: #7bc877;
    font-size: 24rpx;
    text-align: center;
}