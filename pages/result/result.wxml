<!--pages/result/result.wxml-->

<view class="background-view flex-column" style="background-color: {{backgroundColor}}">
    <image class="background-image" src="../../images/result/background.png"></image>
    <image src="../../images/result/top-image.png" style="width:750rpx;height: 162rpx;margin-top: 30rpx"></image>
    <view style="font-size: 170rpx;color: white;line-height: 170rpx;margin-top: 55rpx">03</view>
    <view style="font-size: 40rpx;color: white;line-height: 40rpx;margin-top: 16rpx">ppm</view>
    <view style="line-height: 43rpx;text-align: center;margin-top: 23rpx">
        <text style="font-size: 30rpx;color: white;">{{dateText}}</text>
    </view>
    <view class="bottom-card flex-column">
        <view class="bottom-card-title">请问本次是在什么状态下检测的？</view>
        <swiper style="width: 100%;height: 275rpx" indicator-dots="true" indicator-active-color="#FF5F00">
            <swiper-item style="display: flex;flex-direction: row;justify-content: space-between;" wx:for="{{3}}">
                <view style="width: 40rpx"/>
                <view class="small-card" wx:for="{{4}}">
                    <view style="margin-top: 40rpx;text-align: center;line-height: 24rpx">
                        <text style="color: #979797;font-size: 24rpx;width: 150rpx">晚餐前</text>
                    </view>
                    <view style="text-align: center;line-height: 24rpx;margin-bottom: 18rpx">
                        <text style="color: #BEBEBE;font-size: 24rpx">BEFORE\nDINNER</text>
                    </view>
                </view>
                <view style="width: 40rpx"/>
            </swiper-item>
        </swiper>
        <view class="bottom-btn" hover-class="press-style" hover-stay-time="50">查看解读</view>
    </view>
</view>
