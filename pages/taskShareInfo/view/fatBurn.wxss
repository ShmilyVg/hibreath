.fatbarn{
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.fatbarn-value-wrap{
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.fatbarn-value{
    display: flex;
    flex-direction: column;
}

.fatbarn-value .value{
    color: #454545;
    font-size: 76rpx;
    font-weight: bold;
}

.fatbarn-value > .desc{
    color: #333333;
    font-size: 32rpx;
    font-weight: 500;
}

.fatbarn .card-body > .desc{
    margin-top: 60rpx;
    color: #454545;
    font-size:30rpx;
    font-weight: 400;
    padding: 0 11rpx;
    text-align: justify;
}