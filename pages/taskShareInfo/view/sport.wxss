
.sport{
    padding-left: 30rpx;
    padding-right:30rpx ;
}
.sport-freestyle .title{
    color:#454545;
    font-size:30rpx;
    font-weight: 500;
}

.sport-freestyle .value{
    color: #454545;
    font: size 66rpx;
    font-weight: bold;
}

.sport-styles {
    display: flex;
    flex-wrap: wrap;
    margin: 51rpx -30rpx;
}
.sport-styles .style {
    display: flex;
    width: 25%;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 20rpx;
    text-align: center;
}

.sport-styles .desc{
    color:#454545;
    font-size: 28rpx;
    font-weight: 400;
}
.sport-styles image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
}

.freestyle-desc{
    display: flex;
}

.freestyle-desc .desc{
    width: 50%;
}

.freestyle-desc .title{
    margin-bottom: 33rpx;
    color:#454545;
    font-size: 30rpx;
    font-weight: 500;
}

.freestyle-desc .value-wrap{
    display: flex;
    align-items: baseline;
}

.freestyle-desc .value{
    color:#454545;
    font-size: 66rpx;
    font-weight: bold;
}

.freestyle-desc .value-unit{
    color:#454545;
    font-size: 40rpx;
    font-weight: bold;
}
.recommend-list .recommend{
    display: flex;
    align-items: center;
    margin-bottom: 50rpx;
}
.recommend-list .img-wrap{
    width: 180rpx;
    height: 108rpx;
    margin-right: 32rpx;
    border-radius: 5rpx;
    overflow: hidden;
}

.recommend-list .tag{
    width: 100rpx;
    color: #9B9B9B;
    font-size: 24rpx;
    font-weight: 500;
    text-align: center;
}

.recommend-list .title{
    color:#454545;
    font-size: 30rpx;
    font-weight: 500;
}

.recommend-list .desc{
    margin-top: 19rpx;
    color:#A0A0A0;
    font-size: 24rpx;
    font-weight: 400;
}