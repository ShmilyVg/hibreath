<!--pages/result/result.wxml-->

<!--<view class="background-view flex-column" style="background-color: {{mainColor}}">-->
<view class="resultHead">

</view>
<view class="background-view">
    <view class="score">
        <view class="scoreText1">本次检测结果:{{score}}</view>
        <view class="scoreText2">PPM</view>
        <view class="clear"></view>
    </view>
    <view class="resultDate">{{resultDate}} {{resultTime}}</view>
    <!--<button wx:="isShare" data-id="shareBtn" open-type="share">分享</button>-->

    <view class="resultText">"相当于步行的速度,超越全平台2%的用户"</view>
    <view class="result-list" wx:for="{{list}}">
        <view  wx:if="{{item.section == true}}"  wx:key="section" style="color: {{LVcolor[index]}};display:flex;justify-content: center;">
            <view>
                <view class="resultNumber">{{item.gradeNumber}}</view>
                <view class="resultGrade">{{item.gradeType}}</view>
            </view>
    <!--        <view  style="display: flex;align-items: center">
                <image class="resultImg" src="../../images/result/lv{{item.grade}}c.png"></image>
                <image hidden="{{index ==2 ||index ==5}}" class="resultLine" src="../../images/result/line.png"></image>
            </view>-->
        </view>
        <view wx:else="{{item.section == false}}" style="color: #929292;display:flex;justify-content: center;">
            <view>
                <view class="resultNumber">{{item.gradeNumber}}</view>
                <view class="resultGrade">{{item.gradeType}}</view>
            </view>
          <!--  <view  style="display: flex;align-items: center">
                <image class="resultImg" src="../../images/result/lv{{item.grade}}.png"></image>
                <image hidden="{{index ==2 ||index ==5}}" class="resultLine" src="../../images/result/line.png"></image>
            </view>-->
        </view>

    </view>
    <view class="clear"></view>
    <view wx:if="{{shareIn}}" style="display: flex;flex-direction: row;justify-content: center;flex-wrap: wrap;margin-top: 90rpx">
        <view wx:if="{{noAddPlan}}"  class="resultBtn" hover-class="press-style" hover-stay-time="50" bindtap="toSetInfo"></view>
    </view>
    <view wx:if="{{shareIn}}" style="display: flex;flex-direction: row;justify-content: center;flex-wrap: wrap;">
        <view class="resultSJ"></view>
    </view>

    <view wx:if="{{shareIn}}" class="resultBottomText">定制加速燃脂计划</view>
    <block wx:if="{{halfMonth}}">
        专属营养师
        <view>燃脂效果一直不佳？为您推荐专属营养师</view>
        <image src=""></image>
    </block>

</view>
<!-- 弹窗组件 -->
<view class="modal" hidden="{{beyondLastTime.type == '0' ?true:''}}">
    <view class="result-container">
        <view class="title" bindtap='confirm'>{{beyondLastTime.title}}</view>
        <view class="content" bindtap='confirm'>
            {{beyondLastTime.content}}
        </view>
        <view class='modal-btn-wrapper'>
            <!--<view class='confirm-btn' style="{{tintColor}}" bindtap='confirm'>{{confirmText}}</view>-->
            <button data-id="shareBtn"  open-type="share">分享</button>
        </view>
    </view>
</view>
