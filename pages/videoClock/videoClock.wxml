    <progress  activeColor="#ED6F69" backgroundColor="#D2D2D2" percent="{{progressM}}" stroke-width="20" />
</view>
<view class="HIIT-headvideo">
    <video id="videoplayer" class="HIITVideo" enable-progress-gesture="{{false}}" controls="{{false}}" bindended="bindended" autoplay="{{isAutoplay}}" src="{{videoUrl}}"  bindtimeupdate="videoUpdate"></video>
</view>
<view class="HIIT-desc">
    <view class="videoTitle">{{indexTitle}}</view>
    <view class="videoImp">动作要点</view>
    <view class="videostepList" wx:for="{{indexStepList}}">
        <text style="margin-right: 20rpx">·</text>{{item}}
    </view>
    <view class="videoLine"></view>
</view>

