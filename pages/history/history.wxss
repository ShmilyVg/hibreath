.history-num {
    color: #fff;
    position: absolute;
    left: 36rpx;
    top: 35rpx;
}

.history-num-text {
    display: inline-block;
    vertical-align: bottom;
    font-size: 70rpx;
    line-height: 52rpx;
}

.history-num-unit {
    display: inline-block;
    vertical-align: bottom;
    font-size: 30rpx;
    margin-left: 10rpx;
}

.history-hint {
    font-size: 26rpx;
    color: #fff;
    opacity: 0.8;
    position: absolute;
    left: 36rpx;
    top: 95rpx;
}

.history-time {
    font-size: 26rpx;
    color: #fff;
    position: absolute;
    right: 41rpx;
    top: 60rpx;
    opacity: 0.8;
}

.history-date {
    font-size: 26rpx;
    color: #fff;
    position: absolute;
    right: 41rpx;
    top: 95rpx;
    opacity: 0.8;
}

.history-none {
    font-size: 32rpx;
    color: #979797;
    width: 100%;
    height: 35rpx;
    text-align: center;
    position: absolute;
    top: 40%;
    left: 0;
}

.top-tip {
    width: 470rpx;
    height: 80rpx;
    background: rgba(77, 77, 77, 1);
    border-radius: 40rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 80rpx;
    text-align: center;
    margin: 43rpx 0 40rpx;
}

.top-point {
    width: 18rpx;
    height: 18rpx;
    background: rgba(49, 255, 0, 1);
    border-radius: 50%;
    margin-right: 15rpx;
    margin-left: 95rpx;
}