page {
    background: #3E3E3E;
}

.history-box {
    width: 690rpx;
    height: 150rpx;
    margin: 0 auto 40rpx;
    border-radius: 28rpx;
    position: relative;
}

.history-box:first-child {
    margin-top: 60rpx;
}

.history-bg {
    width: 649rpx;
    height: 128rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.history-bg image {
    width: 100%;
    height: 100%;
}

