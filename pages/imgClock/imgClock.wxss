/* 上传图片部分 */

page {
  box-sizing: border-box;
  height: 100%;
  background: #fff;
}
.imgClock{
  box-sizing: border-box;
  height: 50%;
  background: #7bc877;
}
.imgClock-top {
  color: #fff;
  padding-top: 70rpx;
}
.line{
  background: #7bc877;
}

.imgClock-titleA {
  font-size: 30rpx;
  opacity: 0.8;
  padding-left: 51rpx;
  margin-bottom: 16rpx;
}

.imgClock-titleB {
  font-size: 48rpx;
  padding-left: 53rpx;
  margin-bottom: 71rpx;
}
.photo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-bottom: 23.4rpx;
}

.photo .title {
  margin-top: 31.2rpx;
}

.flex {
  display: flex;
}

.up-pic {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.pic-box {
  flex-flow: wrap;
  width: 100%;
}

.ap-box {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.imgMargin {
  margin-right: 0 !important;
}

.show-view {
}

.show-pic {
  width: 210rpx;
  height: 210rpx;
  border-radius: 20rpx;
}

.add-pic {
  /* width:100%;
    padding-bottom: 100%;
    height: 0;*/
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 20rpx;
  position: relative;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.add-pic image {
  width: 90rpx;
  height: 78rpx;
  margin-left: 60rpx;
  margin-top: 66rpx;
}

/* 删除图片 */

.img-de {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  right: 45rpx;
  top: 15rpx;
}

.img-de image {
  width: 40rpx;
  height: 40rpx;
}


form{
  width: 100%;
  display: block;
  background: #fff;
  border-top-left-radius: 80rpx;
  padding: 100rpx 20rpx 60rpx;
  box-sizing: border-box;
}
button[disabled] {
  color: #fff !important;
  background: #7BC877 !important;
}

button::after {
  border: none;
}

.free-btn {
  width: 500rpx;
  height: 100rpx;
  margin-top: 100rpx;
  background: #7BC877;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 42rpx;
}

.free-clock-say {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(69, 69, 69, 1);
  line-height: 42rpx;
  border-radius: 20rpx;
  padding: 38rpx 50rpx;
  height: 300rpx;
}

.free-clock-say-placeholder-class {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(177, 177, 177, 1);
  line-height: 42rpx;
}

.free-clock-title {
  font-size: 38rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(69, 69, 69, 1);
  line-height: 53rpx;
  margin-left: 10rpx;
  align-self: flex-start;
  margin-bottom: 40rpx;
}
