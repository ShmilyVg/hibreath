<view wx:if="{{haveGroupId}}" class="relative fill-width flex-column box-sizing-border-box community-layout">
    <view class="fill-width flex-row align-items-center space-between" style="margin-top: 80rpx;">
        <view class="flex-row align-items-center">
            <view class="relative">
                <image src="{{currentSocial.imgUrl}}" class="community-logo"></image>
                <image src="../../images/community/group.png" class="absolute community-switch-icon"></image>
            </view>
            <view class="community-name">{{currentSocial.name}}</view>
        </view>
        <setting bind:onSettingClickEvent="onCommunitySettingClickEvent"></setting>
    </view>
    <view bindtap="toMemberManagerPage" class="fill-width flex-row align-items-center space-between" style="margin-top: 80rpx;">
        <view class="flex-row align-items-center">
            <view class="community-member-num">{{socialMemberInfo.memberCount}}</view>
            <view class="community-member-description">位·燃脂成员</view>
        </view>

        <view class="flex-row align-items-center relative">
            <image wx:for="{{socialMemberInfo.memberImgs}}" wx:key="index" src="{{item}}" class="community-member-head"></image>
            <view class="flex-row align-items-center justify-center" style="padding: 18rpx;border-radius: 50%;background-color: white;margin-left: -20rpx;">
                <image src="../../images/community/add.png" style="width: 32rpx;height: 32rpx;border-radius: 50%;"></image>
            </view>
        </view>
    </view>

    <view class="fill-width flex-row align-items-center box-sizing-border-box community-rank-layout">
        <view class="flex-row align-items-center" bindtap="toReductionList">
            <image src="../../images/community/rank.png" class="community-rank-icon"></image>
            <view class="community-rank-text">减重榜</view>
        </view>
        <view class="fill-height" style="border-left: 2rpx solid white;margin-left: 87rpx;margin-right: 72rpx;"></view>
        <view class="flex-row align-items-center" bindtap="toPunchList">
            <image src="../../images/community/rank.png" class="community-rank-icon"></image>
            <view class="community-rank-text">打卡榜</view>
        </view>
    </view>

    <message-item class="fill-width" bind:onMessageDeleteEvent="onDynamicItemDeleteEvent" wx:for="{{dynamicList}}" wx:key="taskId" message="{{item}}"></message-item>

</view>
<view wx:if="{{haveGroupId}}" class="community-clock" bindtap="toImgClock"><text>发表\n动态</text></view>
<view wx:else>
    <view class="community-text">
        <view style="top:700rpx;position: relative">您还未加入任何圈子</view>
    </view>
    <button class="community-btn" open-type="getUserInfo" bindgetuserinfo="onGetUserInfoEvent">创建新圈子</button>
</view>
