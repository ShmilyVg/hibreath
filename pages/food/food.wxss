/* pages/food/food.wxss */

view {
  box-sizing: border-box;
}

.food-top {
  background: #7bc877;
  height: 650rpx;
  padding-top: 56rpx;
  color: #fff;
  text-align: center;
}

.food-top-text1 {
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
}

.food-top-text2 {
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  font-size: 120rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  font-family: DINCondensed-Bold;
}

.food-top-text2 text {
  font-size: 40rpx;
  opacity: 0.5;
}

.food-top-text3 {
  margin-top: 50rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  padding: 0 103rpx;
}

.food-top-btn {
  width: 396rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  border-radius: 48rpx;
  color: #4fbb49;
  font-size: 30rpx;
  position: relative;
  margin: 38rpx auto;
}

.food-top-btn-image {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  position: absolute;
  left: 23rpx;
  top: 21rpx;
}

.food-contain {
  background: #fff;
  padding: 78rpx 0;
  margin-top: -90rpx;
  border-top-left-radius: 80rpx;
}

.food-chart-title {
  text-align: center;
}

.food-chart-title-date {
  display: inline-block;
  color: #999;
  font-size: 28rpx;
  margin-right: 12rpx;
  margin-bottom: 35rpx;
}

.food-chart-title-img {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
}

.canvas {
  width: 95%;
  margin: 0 auto;
}

.bottom-view {
  border-radius: 20rpx;
  background-color: white;
}

.bottom-view-cell {
  padding: 0 40rpx;
}

.bottom-view-cell-title {
  font-size: 32rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(69, 69, 69, 1);
  line-height: 45rpx;
}

.bottom-view-cell-content {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(150, 150, 150, 1);
  line-height: 33rpx;
  margin-top: 5rpx;
}

.bottom-view-cell-right {
  font-size: 60rpx;
  font-family: DINCondensed-Bold, DINCondensed;
  font-weight: bold;
  color: rgba(41, 41, 48, 1);
  line-height: 72rpx;
  margin-top: 55rpx;
}

.bottom-view-cell-right-r {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(150, 150, 150, 1);
  line-height: 33rpx;
  margin-left: 10rpx;
}

.bottom-view-line {
  height: 1rpx;
  background-color: #f2f2f2;
  width: 100%;
  margin-top: 44rpx;
}

.empty-img{
 
  width:345rpx;
  height:280rpx;
  position: relative;
  left:50%;
  top:50%;
  margin-top:140rpx;
  margin-left:-172rpx;
}
.empty-text{
  margin-left:10rpx;
font-size:30rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(187,187,187,1);
line-height:42rpx;
text-align: center;
}

