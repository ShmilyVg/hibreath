/* pagesIndex/dayReportConclude/dayReportConclude.wxss */

page {
  background-color: #f5f5f5;
}

.dayReportConclude {
  padding: 30rpx;
}

.dayConclude {
  margin-bottom: 20rpx;
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  padding: 50rpx 49rpx 47rpx 31rpx;
  border-radius: 20rpx;
}

.dayConclude image {
  width: 28rpx;
  height: 28rpx;
  margin-top: 23rpx;
}

.Desc {
  width: 360rpx;
  margin-left: 17rpx;
}

.DescTit {
  height: 29rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(69, 69, 69, 1);
  line-height: 28rpx;
  margin-bottom: 20rpx;
}

.DescTime {
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 28rpx;
}

.weight {
  width: 90rpx;
}

.unit {
  height: 18rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 28rpx;
  text-align: center;
}

.value {
  height: 42rpx;
  font-size: 60rpx;
  font-family: DINCondensed;
  font-weight: bold;
  margin-bottom: 14rpx;
  color: rgba(69, 69, 69, 1);
  line-height: 60rpx;
  text-align: center;
}

.noReport {
  text-align: center;
}

.noReport image {
  margin-top: 363rpx;
  width: 345rpx;
  height: 280rpx;
  background: linear-gradient(54deg, rgba(250, 251, 255, 1), rgba(243, 245, 252, 1));
  opacity: 0.7;
}

.noReport view {
  margin-top: 42rpx;
  height: 29rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 42rpx;
}
.lastPage{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #9B9B9B;
  background-color: #ffffff;
}
