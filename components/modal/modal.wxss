/* components/modal/modal.wxss */
.mask{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0,0,0,0.4);
    z-index: 9999;
}

.modal-content{
    display: flex;
    flex-direction: column;
    width: 90%;
    height: 340rpx;
    background-color: #fff;
    border-radius: 20rpx;
}
.modal-viewT{
    text-align: center;
    margin-top: 60rpx;
    font-size:38rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#000000;
}
.modal-viewB{
    text-align: center;
    margin-bottom: 60rpx;
    font-size:38rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#000000;
}
.modal-btn-wrapper{
    display: flex;
    flex-direction: row;
    height: 120rpx;
    line-height: 120rpx;
    border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
    flex: 1;
    text-align: center;
    font-size: 35rpx;
    font-weight: bold;
}

.cancel-btn{
    border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
    flex: 1;
    height: 100%;
    overflow-y: hidden;
}
