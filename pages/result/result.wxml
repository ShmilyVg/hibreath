<!--pages/result/result.wxml-->

<view class="background-view flex-column" style="background-color: {{mainColor}}">
    <image class="background-image" src="../../images/result/background.png"></image>

    <image src="../../images/result/top-image.png" style="width:750rpx;height: 162rpx;margin-top: 30rpx"></image>
    <view style="font-size: 170rpx;color: white;line-height: 170rpx;margin-top: 55rpx;font-weight:bold">{{score}}</view>
    <view style="font-size: 40rpx;color: white;line-height: 40rpx;margin-top: 16rpx">ppm</view>
    <view style="line-height: 43rpx;text-align: center;margin-top: 23rpx">
        <text style="font-size: 30rpx;color: white;">{{dateText}}</text>
    </view>
    <view class="bottom-card flex-column">
        <view class="bottom-card-title">{{cardTitle}}</view>
        <block wx:if="{{!showUnscramble}}">
            <swiper style="width: 100%;height: 275rpx" indicator-dots="true" indicator-active-color="{{mainColor}}">
                <swiper-item style="display: flex;justify-content: space-between;" wx:for="{{list.length/4}}" wx:for-index="bigIndex">
                    <view style="width: 40rpx"></view>
                    <view class="small-card"
                          style="background-color: {{list[bigIndex*4+index]['isChose']?mainColor:'#E9E9E9'}}"
                          hover-class="press-style" hover-stay-time="50"
                          wx:for="{{4}}" bindtap="clickChoose" data-index="{{list[bigIndex*4+index]['key']}}">
                        <block wx:if="{{list[bigIndex*4+index]['text_en']}}">
                            <view style="margin-top: 40rpx;text-align: center;line-height: 24rpx">
                                <text style="color: {{list[bigIndex*4+index]['isChose']?'#ffffff':'#979797'}};font-size: 24rpx;width: 150rpx">{{list[bigIndex*4+index]['text_zh']}}</text>
                            </view>
                            <view style="text-align: center;line-height: 20rpx;margin-bottom: 25rpx">
                                <text style="color: {{list[bigIndex*4+index]['isChose']?'#ffffff':'#BEBEBE'}};font-size: 20rpx">
                                    {{list[bigIndex*4+index]['text_en']}}
                                </text>
                            </view>
                        </block>
                        <view wx:else style="height: 100%;width: 100%;background-color: white"></view>
                    </view>
                    <view style="width: 40rpx"></view>
                </swiper-item>
            </swiper>
            <view class="bottom-btn"
                  style="background-color: {{isChose?mainColor:'#E9E9E9'}};color: {{isChose?'#ffffff':'#979797'}};margin-top: 20rpx;"
                  hover-class="press-style" hover-stay-time="50" bindtap="clickBtn">查看解读</view>
        </block>

        <view wx:else class="flex-column">
            <view wx:for="{{description}}" class="flex-column" style="height: 138rpx;justify-content: space-between">
                <view class="flex-row" style="margin-top: 30rpx;align-items: flex-start">
                    <view class="bottom-card-num">{{index+1}}</view>
                    <view style="font-size:28rpx;color: #979797;margin-right: 45rpx;width: 534rpx">{{item}}</view>
                </view>
                <view wx:if="{{index<description.length-1}}" style="width:597rpx;height:2rpx;opacity:0.2;background-color: #979797"></view>
            </view>
        </view>
    </view>
</view>
