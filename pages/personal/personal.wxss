/* pages/personal/personal.wxss */
page{
    background: #3E3E3E;
    color: #fff;
    padding:0 60rpx 0 60rpx;
    box-sizing:border-box;
}
.personal-head{
    height: 200rpx;
    line-height: 200rpx;
}
.personal-pic{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
}
.personal-body{
    height: 150rpx;
    align-items: center;/** 垂直居中*/
    display: flex;
    border-bottom: 1px #fff solid;
}
.personal-body text{

}
.personal-body image{
    width:40rpx;
    height:40rpx;
    border-radius:50%;
    margin-right: 20rpx;
}

.donghua{
    animation-name: breath;
    animation-duration: 1s;                         /* 动画时长3秒 */
    animation-timing-function: linear;         /* 动画速度曲线：以低速开始和结束 */
    /*animation-iteration-count: infinite;            播放次数：无限 */

}

@keyframes breath {
    from {  transform: translate(0px, 0px);}                          /* 动画开始时的不透明度 */
    50%  { transform: translate(25px, 50px); }                          /* 动画50% 时的不透明度 */
    to   { transform: translate(50px, 100px);}                          /* 动画结束时的不透明度 */
}
