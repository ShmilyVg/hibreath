<template name="HIITCard">
<!--燃脂卡片-->
    <view class="set-content-view flex-column"  style="padding-bottom: none">
        <view class="flex-row" style="justify-content: space-between;width: 100%;height: 78rpx">
            <view class="flex-row">
                <image src="{{sportTask.iconUrl}}" class="set-content-icon"></image>
                <view class="flex-column" style="align-items: start;margin-left: 20rpx">
                    <view class="set-content-title">{{sportTask.title}}</view>
                    <view class="set-content-content">你知道怎样训练么？</view>
                </view>
            </view>
            <view wx:if="{{!sportTask.finished}}" class="set-content-toFinish" data-type="sport"
                  catchtap="bindTapToFinish">自由打卡
            </view>
            <image src="../../images/set-info/finished.png" wx:else class="set-content-finished"></image>
        </view>
        <view class="dashedLine"></view>
        <view style="width: 100%">
            <image class="HIITCardImgL"  wx:if="{{grayLeft}}" hidden="{{hiddenImg}}" src="../../images/set-info/leftG.png"></image>
            <image class="HIITCardImgL" bindtap="imgToPre" wx:else hidden="{{hiddenImg}}" src="../../images/set-info/leftB.png"></image>
            <image class="HIITCardImgR"  wx:if="{{grayRight}}" hidden="{{hiddenImg}}" src="../../images/set-info/rightG.png"></image>
            <image class="HIITCardImgR" bindtap="imgToNext" wx:else  hidden="{{hiddenImg}}" src="../../images/set-info/rightB.png"></image>
            <swiper bindchange="swiperChange"  current="{{currentSwiper}}"  class="" style="width: 100%;height:{{aheight}}rpx">
                <block wx:for="{{sportExt.recommendList}}" style="height: 500rpx">
                    <swiper-item>
                        <view  class="swiperBigTitle" >{{item.title}}</view>
                        <view class="clear"></view>
                        <view wx:for="{{item.list}}" style="margin-bottom: 50rpx">
                            <image class="swiperImg"  src="{{item.imgUrl}}"></image>
                            <view style="float: left">
                                <view class="swiperSmallTitle">{{item.title}}</view>
                                <view class="swiperDes">{{item.desc}}</view>
                            </view>
                            <view class="clear"></view>
                        </view>
                    </swiper-item>
                </block>
            </swiper>
        </view>
    </view>

</template>
