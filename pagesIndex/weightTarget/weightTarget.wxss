.top-num text {
  font-size: 50rpx;
  font-family: DINCondensed;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.top-num image {
  width: 28rpx;
  height: 26rpx;
  position: absolute;
  top: 0;
