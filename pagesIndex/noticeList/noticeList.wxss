page{
  height: 100%;
}
.tab_item {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(170, 170, 170, 1);
  width: 33.33%;
  float: left;
  text-align: center;
}

.tab_item_active {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(69, 69, 69, 1);
  width: 33.33%;
  float: left;
  text-align: center;
}

.active_line {
  margin: 0rpx auto 0 auto;
  width: 70rpx;
  height: 6rpx;
  background: rgba(123, 200, 119, 1);
  border-radius: 2rpx;
}

.result_tab_top {
  flex-wrap: wrap;
  align-content: flex-center;
  align-items: center;
  width: 100%;
  padding: 0rpx 3rpx;
  box-sizing: border-box;
  justify-content: space-around;
  height: 90rpx;
}


.noticeList-header{
  height:60rpx;
  line-height:60rpx;
  padding:0 43rpx;
  font-size:32rpx;
  margin-bottom:31rpx;
  margin-top:40rpx;
}
.header-btn{
  width:126rpx;
  height:58rpx;
  border:1px solid #DADADA;
  font-size:24rpx;
  border-radius: 29rpx;
  padding:0 18rpx;
   color:#9B9B9B;
}
.header-btn image{
  width:23rpx;
  height:24rpx;
}
.noticeList{
  height:126rpx;
  padding:45rpx 43rpx;
}
.notice-head-img{
  width:64rpx;
  height:64rpx;
  border-radius:50%;
  float:left;
  margin-right:24rpx;
}
.notice-center{
  width:363rpx;
  float:left;
}
.notice-nickname{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(10,10,10,1);
  line-height:36rpx;
}
.notice-thumbs-up{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(69,69,69,1);
  line-height:36rpx;
}
.notice-solidHeart{
  width:27rpx;
  height:24rpx;
  margin:0 10rpx 0 20rpx;
}
.notice-comment{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(69,69,69,1);
  line-height:40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.notice-time{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(170,170,170,1);
  line-height:69rpx;
}
.notice-img{
  width:126rpx;
  height:126rpx;
  border-radius:10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(69,69,69,1);
  line-height:126rpx;
  float:left;
}
.notice-left{
  width:440rpx;
}
.phone-img{
  width:345rpx;
  height:280rpx;
  position: relative;
  left:50%;
  top:50%;
  margin-top:300rpx;
  margin-left:-160rpx;
}
.empty-text{
font-size:30rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(187,187,187,1);
line-height:42rpx;
text-align:center;
}
.notice-delete{
  width:230rpx;
  height:44rpx;
  background:rgba(242,242,242,1);
  border-radius:4rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#9B9B9B;
  line-height:40rpx;
  margin-top:18rpx;
  text-align:center;
}




/* 动态消息 */
.page{
    display: block;
    min-height: calc(100% - 100rpx);
    width: 100%;
    position: absolute;
    left: 0;
    top: 100rpx;
    z-index: 1;
}
.phone-img{
    width:345rpx;
    height:280rpx;
    position: relative;
    left:50%;
    top:50%;
    margin-top:300rpx;
    margin-left:-160rpx;
}
.empty-text{
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(187,187,187,1);
    line-height:42rpx;
    text-align:center;
    margin-top: 40rpx;
}
