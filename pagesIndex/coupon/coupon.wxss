/* pagesIndex/coupon/coupon.wxss */
page{
    box-sizing: border-box;
    padding: 73rpx 30rpx 70rpx 30rpx;
    background-color: #f2f3f5;
    min-height: 100%;
}
.coupon_tab_top{
    display: flex;
    margin-bottom: 50rpx;
}
.active_line{
    width:70rpx;
    height:6rpx;
    background:rgba(123,200,119,1);
    border-radius:2rpx;
    margin: 0 auto;
}
.tab_item_active{
    font-size:34rpx;
    max-width: 170rpx;
    text-align: center;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(68,68,68,1);
}
.tab_item{
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(170,170,170,1);
}
.coupon_list{
    width: 100%;
    height: 266rpx;
    background:rgba(255,255,255,1);
    margin-bottom: 20rpx;
    display: flex;
    border-radius: 10rpx;
}
.coupon_list_left{
    width:63rpx;
    height:266rpx;
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:500;
    border-radius:10rpx 0 0 10rpx;
    color:rgba(255,255,255,1);
    padding: 80rpx 10rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 45rpx;
}
.coupon_list_right{
    box-sizing: border-box;
    padding: 50rpx 0rpx 0rpx 0rpx;
    width: 100%;
    border-radius: 0 10rpx 10rpx 0;
}
.coupon_list_right_title{
    padding-left: 30rpx;
    font-size:30rpx;
    margin-top: 10rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    float: left;
}
.coupon_list_right_usedAmount{
    padding-right: 30rpx;
    display: flex;
    font-size:56rpx;
    float: right;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,127,58,1);
    margin-bottom: 10rpx;
}
.coupon_list_right_time{
    float: left;
    font-size:22rpx;
    font-family:PingFang SC;
    font-weight:400;
    padding-left: 30rpx;
    color:rgba(153,153,153,1);
}
.coupon_list_right_fullAmount{
    float: right;
    font-size:24rpx;
    padding-right: 30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.coupon_list_right_bottom{
    height:79rpx;
    margin-top: 25rpx;
    background:rgba(248,249,250,1);
    border-top:1px dashed rgba(221,221,221,1);
    box-sizing: border-box;
    padding: 0rpx 25rpx 0rpx 30rpx;
    line-height: 79rpx;
}
.coupon_list_right_bottom_description{
    font-size:22rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    max-width: 370rpx;
    overflow: hidden;
    float: left;
    text-overflow:ellipsis;
    white-space: nowrap;

}
.coupon_list_right_bottom_btn{
    width:146rpx;
    height:52rpx;
    float: right;
    background:rgba(255,137,73,1);
    border-radius:26rpx;
    font-size:24rpx;
    font-family:PingFang SC;
    text-align: center;
    line-height: 52rpx;
    font-weight:500;
    margin-top: 13.5rpx;
    color:rgba(255,255,255,1);
}
.coupon_noData{
    width: 370rpx;
    height: 308rpx;
    margin: 179rpx auto 0rpx auto;
}
.coupon_noData image{
    width: 100%;
    height: 100%;
}
.coupon_noData_view{
    text-align: center;
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    margin-top: 46rpx;
    color:rgba(102,102,102,1);
}