/* components/my-toast/my-toast.wxss */
.my-toast-view{
    height: 92rpx;
    display: flex;
    align-items: center;
    align-content: center;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    background:rgba(0,0,0,1);
    opacity:0.7;
    border-radius:10px;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    position: fixed;
    max-width: 492rpx;
    left: 20%;
    top:45%;
    z-index: 100;
}
