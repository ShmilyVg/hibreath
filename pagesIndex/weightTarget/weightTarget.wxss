/*模态框*/

.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  height: 700rpx;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  text-align: center;
}

/*动画前初始位置*/

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.placeholder {
  font-size: 46rpx;
  font-family: PingFang-SC;
  font-weight: 400;
  color: #b0b0b0;
}
.weight-title{
  color: #333333;
  font-size: 32rpx;
}
.weight-title view{
  float: left;
  color: #999999;
  font-size: 30rpx;
}
.weightInput {
  margin: 120rpx auto 0;
  height: 120rpx;
  width: 300rpx;
  background: #ECF8EB;
  border-radius: 20rpx;
  font-size: 100rpx;
  font-weight: bold;
  color: #4FBB49;
  font-family: DINCondensed-Bold;
}

.page2-line {
  width: 154rpx;
  height: 2rpx;
  background-color: #7BC877;
  margin: 20rpx auto;
}

.unit {
  margin-top: 37rpx;
  font-size: 60rpx;
  font-weight: bold;
  color: #444444;
  font-family: DINCondensed-Bold;
}

.weightBtn{
  background: #7BC877;
  width:500rpx;
  height:100rpx;
  line-height: 100rpx;
  color: #fff;
  border-radius: 50rpx; 
  margin: 100rpx auto 0;
}


/*分享弹窗*/

.shareMask {
  background: #000;
  opacity: 0.5;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 600;
}

.shareRow {
  width: 100%;
  text-align: center;
  line-height: 50px;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.text-gray {
  color: gray;
}

.margin-top {
  margin-top: 10rpx;
}

.shareContainer {
  background: #f0f0f0;
  position: fixed;
  width: 100vw;
  bottom: 0;
  z-index: 888;
  font-size: 30rpx;
}


.tip-full {
  position: fixed;
  min-height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 1000;
  background-color: black;
  opacity: 0.85;
}

.tip-view {
  width: 560rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 1);
