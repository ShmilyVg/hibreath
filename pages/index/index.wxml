
<view class="home-head">
  <image class="home-pic" src="{{userInfo.headUrl}}"></image>
  <view class="home-name">{{userInfo.nickname}}</view>
  <image wx:if="{{setShow}}" class="home-set" src="../../images/index/set.png"></image>
</view>

<view class="home-heart">
  <view class="home-heart-box1"></view>
  <view class="home-heart-box2"></view>
  <view class="home-heart-box3 {{box3State[box3StateIndex]}}"></view>
  <button class="home-heart-box4 {{box4State[box4StateIndex]}}" bindgetuserinfo="onGetUserInfoEvent" open-type="getUserInfo">{{message}}</button>
  <view wx:if="{{unitShow}}" class="home-heart-unit">ppm</view>
</view>

<view class="home-state-btn" wx:if="{{stateBtnShow}}" bindtap="stateBtnClick"><text>{{stateBtn}}</text></view>
<view class="home-state" wx:else>{{state}}</view>
<view class="home-point" wx:if="{{pointShow}}"><text>{{hint}}</text>{{note}}</view>
<view class="home-btn" wx:if="{{btnShow}}">
  <view class="home-btn-box home-btn-use" bindtap="useUrl">使用教程</view>
  <view class="home-btn-box home-btn-history" bindtap="historyUrl">历史记录</view>
</view>