  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(84,84,84,1);
  line-height:42rpx;
  background-color: transparent;
  outline: none;
}
button{
  padding:0 0;
}
button::after {
  border: none;
}
.per-text{
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(164,164,164,1);
  line-height:33rpx;
}
.per-text-btn{
