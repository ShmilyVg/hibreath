page{
    height: 100%;
    background-color: #7BC877;
}

.community-logo{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.community-switch-icon {
    width: 40rpx;
    height: 40rpx;
    right: -5rpx;
    bottom: 10rpx;
    border-radius: 50%;
}

.community-name {
    width: 350rpx;
    font-size:32rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:45rpx;
    margin-left: 30rpx;
}
.community-NumberText{
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    margin-right: 10rpx;
}
.community-Bg{
    width:220rpx;
    height:68rpx;
    background:rgba(255,255,255,1);
    border-radius:34rpx;
}
.community-Wx{
    width: 38rpx;
    height: 32rpx;
    margin-top: 22rpx;
    float: left
}
.community-Add{
    padding: 18rpx;
    border-radius: 50%;
    background-color: white;
    margin-left: -20rpx;
    margin-right: 15rpx
}
.community-member-num{
    font-size:72rpx;
    font-family:DINCondensed-Bold,DINCondensed;
    font-weight:bold;
    color:rgba(255,255,255,1);
    line-height:86rpx;
}

.community-member-description{
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(69,69,69,1);
    line-height: 68rpx;
    margin-left: 6rpx;
}

.community-member-head{
    width: 66rpx;
    height: 66rpx;
    border: 3rpx solid rgba(255,255,255,1);
    border-radius: 50%;
    margin-left: -20rpx;
    background-color: ghostwhite;
}

.community-rank-layout {
    padding: 30rpx 82rpx 30rpx 67rpx;
    height: 164rpx;
    background: #7BC877;
}

.community-rank-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
}

.community-rank-text {
    font-size: 30rpx;
    font-family:PingFang-SC-Semibold,PingFang-SC;
    font-weight:600;
    color:rgba(255,255,255,1);
    line-height:42rpx;

}
.community-clock{
    width:134rpx;
    height:134rpx;
    border-radius: 50%;
    background:rgba(238,111,105,1);
    box-shadow:0rpx 0rpx 10rpx 0rpx rgba(238,111,105,1);
    position: fixed;
    bottom: 65rpx;
    right: 40rpx;
    font-size:30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    box-sizing: border-box;
    line-height: 50rpx;
    padding-top: 20rpx;

}
.community-text{
    font-size:42rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(69,69,69,1);
    text-align: center;
    width: 750rpx;
    height: 852rpx;
    background-image: url("http://img.hipee.cn/group.png");
    background-size: 100% 100%;
}
.community-btn{
    width:500rpx;
    height:100rpx;
    background:rgba(237,111,105,1);
    border-radius:50rpx;
    font-size:30rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    line-height: 100rpx;
    color:rgba(255,255,255,1);
    margin-top: 40rpx;
}
.noDynamic{
  width:100%;
  height:45rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(155,155,155,1);
  line-height:45rpx;
  margin-top:230rpx;
  text-align:center;
}

.shareMask{
    background:#000;
    opacity:0.5;
    position:fixed;
    top:0;
    right:0;
    bottom: 0;
    left:0;
    z-index:600
}
.shareRow{
    width: 100%;
    text-align: center;
    line-height: 50px;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
}
.text-gray{
    color: gray
}
.margin-top{
    margin-top:10rpx
}
.shareContainer{
    background:#f0f0f0;
    position:fixed;
    width:100vw;
    bottom:0;
    z-index:888;
    font-size:30rpx;
}
.noticeList{
  height:64rpx;
  width:238rpx;
  background:linear-gradient(0deg,rgba(119,119,119,1),rgba(78,78,78,1));
  text-align:center;
  margin-top:50rpx;
  border-radius: 42rpx;
  padding:10rpx 0;
  position: relative;
}
.notice-img{
  width:64rpx;
  height:64rpx;
  background:red;
  vertical-align: middle;
  border-radius: 45%;
  position: absolute;
  left:10rpx;
  margin-right:17rpx;
}
.notice-text{
  width:120rpx;
  height:23rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:69rpx;
  position: absolute;
  left:90rpx;

}
