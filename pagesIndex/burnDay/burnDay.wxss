/* pagesIndex/burnDay/burnDay.wxss */

view {
  box-sizing: border-box;
}

.burnDay {
  padding: 33rpx 50rpx 80rpx 40rpx;
}
.burnDay-date{
  margin-bottom: 5rpx;
}
.burnDay-date-title {
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(243, 243, 243, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding: 0 35rpx 0 24rpx;
}

.burnDay .active{
  background: #7CC878;
  color: #fff;
}

.burnDay-date-title image{
  width: 26rpx;
  height: 26rpx;
  float: right;
  margin-top: 27rpx;
}
.burnDay-date-list{
  overflow: hidden;
}










.cell {
  padding: 0 0rpx;
  height: 160rpx;
  z-index: 90;
  border-radius: 10rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.burn-best {
  background: #f1f8ed;
}

.bestImg {
  width: 193rpx;
  height: 160rpx;
  opacity: 0.7;
  position: absolute;
  left: 317rpx;
  top: 0;
  z-index: 1010;
}

.cell-title {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(69, 69, 69, 1);
  line-height: 42rpx;
  margin-top: 44rpx;
}

.status-tip {
  width: 22rpx;
  position: absolute;
  left: 20rpx;
  top: 52rpx;
}

.excessive {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #ff6100;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  font-family: Adobe 黑体 Std R;
}

.status-tip view {
   width: 20rpx;
  height: 8rpx;
  border-radius: 5rpx;
  margin-bottom: 9rpx;
}

.cell-date {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(150, 150, 150, 1);
  line-height: 33rpx;
  margin-top: 6rpx;
}

.cell-image {
  width: 100rpx;
  height: 89rpx;
  position: relative;
  z-index: 90;
}

.cell-image-image {
  width: 100rpx;
  height: 89rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 90;
}

.cell-image-text {
  width: 100rpx;
  height: 69rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(41, 41, 48, 1);
  position: absolute;
  top: 25rpx;
  left: 0;
  line-height: 69rpx;
  text-align: center;
  font-family: DIN Condensed-Bold, DINCondensed;
  z-index: 90;
}

.cell-line {
  background-color: #f2f2f2;
  width: 100%;
  height: 2rpx;
}

.phone-img {
  width: 345rpx;
  height: 280rpx;
  position: relative;
  left: 50%;
  top: 50%;
  margin-top: 300rpx;
  margin-left: -160rpx;
}

.empty-text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(187, 187, 187, 1);
  line-height: 42rpx;
  text-align: center;
}
