<view class="imgClock-top">
    <view style="float: left;">
     <!--   <view class="imgClock-titleS">#{{tag}}</view>-->
        <view style="font-size:30rpx;font-family:PingFang-SC-Regular,PingFang-SC;font-weight:400;color:rgba(255,177,174,1);margin-bottom: 10rpx">#减脂心灵鸡汤</view>
        <view class="imgClock-titleB">{{description}}</view>
    </view>

   <!-- <image src="../../images/imgClock/yh.png" style="width: 46rpx;height: 50rpx;float: right;margin-top: 20rpx"></image>-->
</view>
<form bindsubmit="submit">
    <view class='photo'>
        <view class='up-pic'>
            <view class='flex pic-box'>
                <block wx:key="imgbox" wx:for="{{imgbox}}">
                    <view class='ap-box imgMargin' wx:if="{{index == 2 ||index == 5 ||index == 8}}">
                        <view class='show-view'>
                            <image class='show-pic' mode="aspectFill" src='{{item}}' bindtap="previewImage" data-index='{{index}}'></image>
                            <view class='img-de' data-deindex='{{index}}' bindtap='imgDelete'>
                                <image style="width: 52rpx;height: 52rpx" src='../../images/imgClock/delete.png'></image>
                            </view>
                        </view>
                    </view>
                    <view class='ap-box' wx:else>
                        <view class='show-view'>
                            <image class='show-pic' mode="aspectFill" src='{{item}}' bindtap="previewImage" data-index='{{index}}'></image>
                            <view class='img-de' data-deindex='{{index}}' bindtap='imgDelete'>
                                <image style="width: 52rpx;height: 52rpx" src='../../images/imgClock/delete.png'></image>
                            </view>
                        </view>
                    </view>
                </block>
                <view class="add-pic" bindtap='addPic1' wx:if="{{imgbox.length<9}}">
                    <image class='add-pic-img' src='../../images/imgClock/img.png'></image>
                </view>
            </view>
        </view>
    </view>
    <view class="free-clock-title" style="margin-top: 60rpx;">说说感受</view>
    <textarea wx:if="{{ifShow}}" placeholder-class="free-clock-say-placeholder-class" class="fill-width box-sizing-border-box free-clock-say" bindblur="textBindblur" bindinput="bindTextAreaBlur" value="{{desc}}"  placeholder-class="" placeholder="说说今日的感受吧...(140字以内)" />
    <button form-type="submit" disabled="{{disable}}" class="flex-row align-items-center justify-center free-btn">完成</button>


</form>

<popup id='popup'
      title=''
      content='内容'
      btn_no='取消'
      btn_ok='确定'
      bind:error="_error"
      bind:success="_success"

      >
</popup>
<!--打卡完成激励弹窗-->
<my-toast
        wx:if="{{showMytoast}}"
        toastType="{{toastType}}"
>
</my-toast>
