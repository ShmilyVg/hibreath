<view wx:for="{{shoppingList}}" >
    <view>{{item.title}}</view>
    <view wx:for="{{item.content}}"   data-id="{{item.id}}" bindtap="toShoppingList">
        <view>
            <image style="width: 30rpx;height: 30rpx;float: left" src="{{item.image}}"></image>
            <view>{{item.contentTitle}}</view>
            <view>{{item.time}}</view>
        </view>
