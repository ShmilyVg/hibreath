/* pagesIndex/food-recommendation/food-recommendation.wxss */
.page{
    background-color: #FEF6F2;
    box-sizing: border-box;
    padding: 0 40rpx;
    height: 100%;
    position: absolute;
    width: 100%;
}
.recommendation-date{
    box-sizing: border-box;
    padding: 20rpx;
    background: #fff;
    position: relative;
    top: -150rpx;
    border-radius:10px;
}
.recommendation-top{
    background: #ED6F69;
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
    position: relative;
}
.recommendation-swiperItem{
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}
.swiperItem{
    line-height: 60rpx;
    text-align: center;
    width: 72rpx;
    height: 120rpx;
}
.swiperItemR{
    background:linear-gradient(0deg,rgba(246,120,114,1),rgba(248,176,170,1));
    box-shadow:0rpx 8rpx 20rpx 0rpx rgba(237,111,105,0.2);
    border-radius:20rpx;
    color:rgba(255,255,255,1);
}
.swiperItemW{
    color:rgba(69,69,69,1);
}
.swiperItemNR{
    font-size:34rpx;
    font-family:DIN Condensed;
    font-weight:bold;
    color:rgba(255,255,255,1);
}
.swiperItemNW{
    font-size:34rpx;
    font-family:DIN Condensed;
    font-weight:bold;
    color:rgba(69,69,69,1);
}
.swiperItemTR{
    font-size:20rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.swiperItemTW{
    font-size:20rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(155,155,155,1);
}
