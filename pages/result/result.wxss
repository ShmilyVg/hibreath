/* pages/result/result.wxss */

.background-view {
    align-items: center;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    position: fixed;
}

.bottom-card {
    position: fixed;
    left: 30rpx;
    bottom: 30rpx;
    background-color: white;
    width: 690rpx;
    height: 573rpx;
    border-radius: 50rpx;
}

.bottom-card-title {
    font-weight: 600;
    font-size: 32rpx;
    color: rgba(151, 151, 151, 1);
    line-height: 45rpx;
    margin-top: 48rpx;
    margin-bottom: 45rpx;
}

.small-card {
    width: 140rpx;
    height: 210rpx;
    border-radius: 28rpx;
    align-items: center;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.background-image {
    position: fixed;
    top: 370rpx;
    right: 0;
    width: 750rpx;
    height: 629rpx;
}

.bottom-card-num {
    width: 46rpx;
    height: 27rpx;
    background: rgba(233, 233, 233, 1);
    border-radius: 18rpx;
    color: #979797;
    font-size: 20rpx;
    line-height: 27rpx;
    text-align: center;
    align-items: center;
    margin-right: 19rpx;
    margin-left: 45rpx;
    margin-top: 8rpx
}

.btn {
    position: absolute;
    bottom: 34rpx;
    background-color: #FF5E00;
    color: white;
}

.score {
    font-size: 170rpx;
    color: white;
    line-height: 170rpx;
    margin-top: 55rpx;
    font-weight:bold;
    font-family: DIN Condensed;
}