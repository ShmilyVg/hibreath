<template name="common">

  <image class="burnup" src="../../images/index/burnup.png" wx:if="{{burnupShow}}"></image>

  <view class="home-heart">
    <image class="home-heratbg" src="../../images/index/heart.png" bindtap="setBtnClick"></image>

    <view class="home-heartbox {{homeHeartBox[homeHeartBoxIndex]}}">
      <view class="heart-hint">
        <image class="hint-pic" src="{{picStateUrl}}" wx:if="{{picState}}"></image>
        <button class="hint-btn" wx:elif="{{btnState}}" bindgetuserinfo="onGetUserInfoEvent" open-type="getUserInfo"><text>点击绑定</text></button>
        <view class="hint-text">{{textState}}</view>
      </view>
    </view>
  </view>

  <view class="home-title" wx:if="{{homeTitle}}">{{homeTitleText}}</view>


  <view class="home-p" wx:if="{{homePShow}}" wx:for="{{homeP.length}}" style="margin-left: {{marginLeft}}">{{homeP[index]}}</view>


  <view class="home-orangebtn" wx:if="{{homeOrangeBtn}}" >{{homeOrangeBtnText}}</view>


</template>




