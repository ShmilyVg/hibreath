/* pagesIndex/box-replenish/box-replenish */

page {
  background: #7bc877;
}

.low-carbon-topView-view1 {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  float: left;
  margin-bottom: 26rpx;
}

.low-carbon-topView-view2 {
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}


.low-carbon-howEat {
  box-sizing: border-box;
  width: 100%;
  padding: 75rpx 0rpx 60rpx 0rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 80rpx 0rpx 0rpx 0rpx;
}

.tab_item {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(170, 170, 170, 1);
  width: 33.33%;
  float: left;
  text-align: center;
}

.tab_item_active {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(69, 69, 69, 1);
  width: 33.33%;
  float: left;
  text-align: center;
}

.active_line {
  margin: 0rpx auto 0 auto;
  width: 70rpx;
  height: 6rpx;
  background: rgba(123, 200, 119, 1);
  border-radius: 2rpx;
}

.result_tab_top {
  flex-wrap: wrap;
  align-content: flex-center;
  align-items: center;
  width: 100%;
  padding: 0rpx 3rpx;
  box-sizing: border-box;
  justify-content: space-around;
}

.hungry-view {
  width: 100%;
  height: 1200rpx;
  padding: 47rpx 0rpx 0rpx 0rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -20rpx 90rpx 0rpx rgba(247, 241, 237, 1);
  border-radius: 80rpx 0rpx 0rpx 0rpx;
  margin-top: 50rpx;
}

.hungry-view-text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  padding: 0rpx 48rpx 0rpx 44rpx;
  box-sizing: border-box;
  color: rgba(69, 69, 69, 1);
}

.hungry-view-text text {
  color: #999;
  font-size: 24rpx;
}

.hungry-view-text1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #454545;
  font-family: PingFang-SC-Medium;
}

.hungry-view-text2 {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  font-family: PingFang-SC-Regular;
}

.hungry-image-text1 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(69, 69, 69, 1);
  margin-top: 26rpx;
}

.hungry-image-text2 {
  font-size: 24rpx;
  margin: 15rpx 0 77rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
