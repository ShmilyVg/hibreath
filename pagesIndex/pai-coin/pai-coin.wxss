.pai-coin-layout {
}

.pai-coin-layout:before {
    content: '';
    background: linear-gradient(180deg, rgba(23, 23, 23, 1) 0%, rgba(69, 69, 69, 1) 100%) center center;
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 310rpx;
}

.pai-coin-left-right-padding{
    padding-left: 40rpx;
    padding-right: 40rpx;
}


.pai-coin-logo {
    width: 147rpx;
