/* pagesThree/ppm_explain/ppm_explain.wxss */


.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  padding-top: 30rpx;
  text-align: center;
  border-radius: 60rpx 60rpx 0 0;
}
.box_title{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 34rpx;
}
.commodity_attr_box button{
  display: inline-block;
  background: transparent;
  border-style: none;
  padding: 0;
}
.commodity_attr_box button view{
  line-height: 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(69,69,69,1);
}
.commodity_attr_box button::after{
  border-style: none;
}
.wx_friend{
  margin-right: 84rpx;
}
.cancel{
  height: 102rpx;
  line-height: 102rpx;
  margin-top: 52rpx;
  border-top: 12rpx solid #F3F3F3;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(155,155,155,1);
}
.bottmFixd{
  border-radius: 0rpx;
  position: fixed;
  bottom: 0;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(123,200,119,1);
  box-shadow:0rpx -10rpx 40rpx 0rpx rgba(255,255,255,1);
  z-index: 100;
  text-align: center;
  color: #fff;
}



.ppm_title{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  text-align: left;
  padding: 0 60rpx 0 40rpx;
}
.first_s{
  margin-top: 65rpx;
}
.line_green{
  width:10rpx;
  height:34rpx;
  background:linear-gradient(0deg,rgba(38,204,144,1),rgba(114,213,133,1));
  border-radius:5rpx;
  display: inline-block;
  margin-bottom: -2rpx;
}
.ppm_text{
  margin: 37rpx 0 70rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  text-align: left;
  padding: 0 40rpx 0 30rpx;
}
.commodity_attr_box .ppm_btn{
  width:500rpx;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(123,200,119,1);
  border-radius:50rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-bottom: 40rpx;
}