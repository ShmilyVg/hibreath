.user-info-layout {
    padding: 50rpx 0 0 40rpx;

}

.user-info-title {
    font-size:40rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    color:rgba(84,84,84,1);
    line-height:56rpx;
    margin-bottom: 30rpx;
    align-self: flex-start;
}


.user-info-item-common-layout {
    padding-right: 42rpx;
    height: 119rpx;
}

.user-info-item-common-title{
    font-size:28rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(84,84,84,1);
    line-height:40rpx;
}

.user-info-head{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.user-info-item-common-arrow {
    width: 20rpx;
    height: 36rpx;
    margin-left: 24rpx;
}

.user-info-item-common-divide-line {
    border-bottom: 1rpx solid #F2F2F2;
}

.user-info-item-common-input{
    font-size:28rpx;
    font-family:PingFang-SC-Semibold,PingFang-SC;
    font-weight:600;
    color:rgba(84,84,84,1);
    line-height:40rpx;
    text-align: right;
}


.user-info-item-common-input-placeholder {
    color:rgba(163,163,163,1);
}
