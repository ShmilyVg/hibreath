.weightTarget {
  position: relative;
  height: 100%;
}

.weightTarget-header {
  position: relative;
  color: #fff;
  padding: 62rpx 98rpx 58rpx 65rpx;
}

.top-title {
  font-size: 48rpx;
  font-family: PingFang SC;
