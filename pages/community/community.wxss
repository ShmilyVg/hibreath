page{
    height: 100%;
}
.community-layout {
    padding: 0 40rpx;
}

.community-layout:before {
    content: '';
    background:linear-gradient(180deg,rgba(23,23,23,1) 0%,rgba(69,69,69,1) 100%);
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 530rpx;
}

.community-logo{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.community-switch-icon {
    width: 40rpx;
    height: 40rpx;
    right: -5rpx;
    bottom: 10rpx;
    border-radius: 50%;
}

.community-name {
    width: 350rpx;
    font-size:32rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:45rpx;
    margin-left: 30rpx;
}

.community-member-num{
    font-size:72rpx;
    font-family:DINCondensed-Bold,DINCondensed;
    font-weight:bold;
    color:rgba(255,255,255,1);
    line-height:86rpx;
}

.community-member-description{
    font-size:24rpx;
    font-family:PingFang-SC-Semibold,PingFang-SC;
    font-weight:600;
    color:rgba(255,255,255,1);
    line-height:33rpx;
    margin-left: 10rpx;
}

.community-member-head{
    width: 66rpx;
    height: 66rpx;
    border: 3rpx solid rgba(255,255,255,1);
    border-radius: 50%;
    margin-left: -20rpx;
    background-color: ghostwhite;
}

.community-rank-layout {
    padding: 30rpx 82rpx 30rpx 67rpx;
    height: 150rpx;
    background: rgba(238,111,105,1);
    box-shadow: 0 2rpx 10rpx 0 rgba(238,111,105,1);
    border-radius: 20rpx;
    margin-top: 45rpx;
}

.community-rank-icon {
    width: 53rpx;
    height: 51rpx;
    margin-right: 38rpx;
}

.community-rank-text {
    font-size: 30rpx;
    font-family:PingFang-SC-Semibold,PingFang-SC;
    font-weight:600;
    color:rgba(255,255,255,1);
    line-height:42rpx;

}
.community-clock{
    width:134rpx;
    height:134rpx;
    border-radius: 50%;
    background:rgba(238,111,105,1);
    box-shadow:0rpx 0rpx 10rpx 0rpx rgba(238,111,105,1);
    position: fixed;
    bottom: 65rpx;
    right: 40rpx;
    font-size:30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    box-sizing: border-box;
    line-height: 50rpx;
    padding-top: 20rpx;

}
.community-text{
    font-size:42rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(69,69,69,1);
    text-align: center;
    width: 750rpx;
    height: 852rpx;
    background-image: url("http://img.hipee.cn/group.png");
    background-size: 100% 100%;
}
.community-btn{
    width:500rpx;
    height:100rpx;
    background:rgba(237,111,105,1);
    border-radius:50rpx;
    font-size:30rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    line-height: 100rpx;
    color:rgba(255,255,255,1);
    margin-top: 40rpx;
}
