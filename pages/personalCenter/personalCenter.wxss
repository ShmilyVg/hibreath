/* pages/personalCenter/personalCenter.wxss */
page {
    background-color:  #F5F5F5;
}
.per-page{
  height:100%;
  padding:0 40rpx;
}
.personal-header{
  padding:75rpx 0 60rpx 0;
}
.per-header-img{
  width:120rpx;
  height:120rpx;
  border-radius:45%;
  border:4px solid rgba(255,255,255,1);
  margin-right:35rpx;
  overflow: hidden;
}
.per-img{
  width:170rpx;
  height:170rpx;
  margin-left:-25rpx;
   margin-top:-25rpx;
}
.per-nickName{
