/* pages/food/food.wxss */

.top-view{
    width:750rpx;
    height:100rpx;
    background:rgba(255,255,255,1);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    justify-content: space-around;
}

.top-view-text{
    font-size:28rpx;
    font-weight:400;
    line-height:40rpx;
}

.middle-view{
    width:690rpx;
    background:rgba(255,255,255,1);
    border-radius:20rpx;
    align-items: center;
    padding: 50rpx 0;
}

.middle-view-title{
    font-size:28rpx;
    font-weight:400;
    color:rgba(150,150,150,1);
}

.middle-view-arr{
    width: 28rpx;
    height: 28rpx;
    margin-left: 10rpx;
}

.middle-view-add-view{
    width:280rpx;
    height:100rpx;
    background:rgba(237,111,105,1);
    border-radius:50rpx;
    margin-top: 36rpx;
    position: relative;
}

.middle-view-add-text{
    width:280rpx;
    height:100rpx;
    color: white;
    line-height: 100rpx;
    position: absolute;
    top: 0;
    left: 120rpx;
}

.middle-view-add-image{
    position: absolute;
    top: 23rpx;
    left: 20rpx;
    width:54rpx;
    height:54rpx;
    background:rgba(255,255,255,1);
    border-radius: 50%;
}

.bottom-view{
    width:690rpx;
    border-radius:20rpx;
    margin-top: 30rpx;
    background-color: white;
}

.bottom-view-cell{
    width: 610rpx;
    padding: 0 40rpx;
}

.bottom-view-cell-title{
    font-size:32rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(69,69,69,1);
    line-height:45rpx;
}

.bottom-view-cell-content{
    font-size:24rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(150,150,150,1);
    line-height:33rpx;
    margin-top: 5rpx;
}

.bottom-view-cell-right{
    font-size:60rpx;
    font-family:DINCondensed-Bold,DINCondensed;
    font-weight:bold;
    color:rgba(41,41,48,1);
    line-height:72rpx;
    margin-top: 55rpx;
}

.bottom-view-cell-right-r{
    font-size:24rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(150,150,150,1);
    line-height:33rpx;
    margin-left: 10rpx;
}

.bottom-view-line {
    height:1rpx;
    background-color: #F2F2F2;
    width: 100%;
    margin-top: 44rpx;
}

/*rend*/
.canvas-base-view{
    width: 650rpx;
    margin-left: -25rpx;
    margin-top: 90rpx;
}

.canvas {
    width: 650rpx;
    height: 440rpx;
    margin-top: 50rpx;
}

page {
    background-color: #F2F2F2;
    display: flex;
    flex-direction:column;
    align-items: center;
    padding: 130rpx 0 30rpx;
}
