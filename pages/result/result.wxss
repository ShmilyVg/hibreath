/* pages/result/result.wxss */

.background-view {
    align-items: center;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    position: fixed;
    padding: 0 40rpx;
}

.bottom-card {
    position: fixed;
    left: 30rpx;
    bottom: 30rpx;
    background-color: white;
    width: 690rpx;
    height: 573rpx;
    border-radius: 50rpx;
}

.bottom-card-title {
    font-weight: 600;
    font-size: 32rpx;
    color: rgba(151, 151, 151, 1);
    line-height: 45rpx;
    margin-top: 48rpx;
    margin-bottom: 45rpx;
}

.small-card {
    width: 140rpx;
    height: 210rpx;
    border-radius: 28rpx;
    align-items: center;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.background-image {
    position: fixed;
    top: 370rpx;
    right: 0;
    width: 750rpx;
    height: 629rpx;
}

.bottom-card-num {
    width: 46rpx;
    height: 27rpx;
    background: rgba(233, 233, 233, 1);
    border-radius: 18rpx;
    color: #979797;
    font-size: 20rpx;
    line-height: 27rpx;
    text-align: center;
    align-items: center;
    margin-right: 19rpx;
    margin-left: 45rpx;
    margin-top: 8rpx
}

.btn {
    position: absolute;
    bottom: 34rpx;
    background-color: #FF5E00;
    color: white;
}

.score {
    font-size: 170rpx;
    color: white;
    line-height: 100rpx;
    margin-top: 100rpx;
    font-weight:bold;
    font-family: DIN Condensed;
}
.result-list{
    float: left;
    width: 33%;
    padding-top: 50rpx;
    height: 180rpx
}



/* 带图片弹窗模板B */

.modal {
    background-color: rgba(0, 0, 0, 0.4);
    position: fixed;
    flex-direction: column;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9998;
}

.result-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    width: 60%;
    height: 30%;
    background-color: white;
    border-radius: 10rpx;
}

.title {
    font-size: 34rpx;
    color: black;
    text-align: center;
    margin-top: 30rpx;
}

.content {
    margin-top:30rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    font-size: 30rpx;
    color: #888888;
}

.modal-btn-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid rgba(7,17,27,0.1);
    width: 100%;
}

.cancel-btn, .confirm-btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    width: 100%;
}

.cancel-btn {
    border-right: 1rpx solid rgba(7,17,27,0.1);
}
