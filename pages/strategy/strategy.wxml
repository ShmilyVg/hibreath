<!--pages/strategy/strategy.wxml-->
<view style="padding: 50rpx 30rpx 0">
    <image class="top-image"></image>
    <view class="title">注意事项</view>
    <view class="flex-column" style="justify-content: space-between;align-items: left" wx:for="{{4}}">
        <view class="flex-row" style="margin: 38rpx 0;align-items: start">
            <view class="num">{{index+1}}</view>
            <view style="font-size:28rpx;color: #979797;width: 620rpx">{{content[index]}}</view>
        </view>
        <view wx:if="{{index<3}}" style="width:100%;height:2rpx;opacity:0.4;background-color: #979797"></view>
    </view>
</view>

<button class="bottom-btn btn" hover-class="press-style" hover-stay-time="50" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">开始燃脂检测</button>
