/* pages/sharedGuidance/sharedGuidance.wxss */

page {
  height: 100%;
  background: #333;
}

view {
  box-sizing: border-box;
}

.tabBar-left {
  padding-left: 40rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.swiper-con , .swiper-item, swiper{
  height:600rpx;
  text-align: center;
}

.swiper-item image{
  width: 600rpx;
  height: 600rpx;
}

.shared-bottom {
  padding: 45rpx 59rpx 60rpx 75rpx;
  height: 517rpx;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  border-radius: 80rpx 0px 0px 0px;
  position: absolute;
  bottom: 0;
  font-family: PingFang-SC-Regular, PingFang-SC;
}

.shared-bottom-title {
  margin-top: 62rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.shared-bottom-name {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.shared-bottom-text {
  margin-top: 66rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

button {
  margin-top: 54rpx;
  width: 590rpx;
  height: 100rpx;
  background: rgba(123, 200, 119, 1);
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
  font-weight: 500;
  position: relative;
}

button view{
  width:70rpx;
  height:70rpx;
  line-height: 70rpx;
  border-radius: 50%;
  background:rgba(255,255,255,1);
  position: absolute;
  right: 18rpx;
  top: 15rpx;
  text-align: center;
  padding-top: 7rpx;
}
button view image{
  width:44rpx;
  height:36rpx;
}
.image{
  width:120rpx;
  height:120rpx;
  border:6rpx solid rgba(255,255,255,1);
  background: #a25522;
  border-radius: 50%;
  position: absolute;
  right: 79rpx;
  top: 45rpx;
}
