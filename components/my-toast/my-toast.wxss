/* components/my-toast/my-toast.wxss */
.my-toast-view{
    height: 92rpx;
    display: flex;
    align-items: center;
    align-content: center;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    background:rgba(0,0,0,1);
    opacity:0.7;
    border-radius:10px;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    position: fixed;
    max-width: 492rpx;
    left: 20%;
    top:45%;
    z-index: 100;
}
.my-toast-Moneyview{
    max-height: 150rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background: rgba(0,0,0,1);
    opacity: 0.7;
    border-radius: 10px;
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(255,255,255,1);
    position: fixed;
    width: 500rpx;
    left: 0;
    top: 45%;
    text-align: center;
    z-index: 100;
    margin: auto;
    right: 0;
}
.moneyview-title{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    display: flex;
    justify-content: center;
}
.moneyview-content{
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
}
.moneyview-img{
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx
}
