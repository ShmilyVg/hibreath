.message-item-layout {
    padding: 70rpx 0rpx 20rpx 0rpx;
    align-self: flex-start;
}

.message-item-head-img{
    width:90rpx;
    height:90rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    background-color: ghostwhite;
}

.message-item-nickname{
    font-size:30rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(69,69,69,1);
    line-height:42rpx;
}

.message-item-time{
    font-size:24rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(155,155,155,1);
    line-height:33rpx;
}

.message-item-desc{
    font-size:30rpx;
    font-family:PingFang-SC-Regular,PingFang-SC;
    font-weight:400;
    color:rgba(69,69,69,1);
    line-height:42rpx;
    word-break: break-all;
    margin-top: 42rpx;
    margin-bottom: 35rpx;
}

.message-item-setting-layout{
    padding: 0 30rpx;
}

.message-item-setting-point{
    width:8rpx;
    height:8rpx;
    background:rgba(155,155,155,1);
}

.message-item-setting-point:nth-child(2){
    margin: 10rpx 0;
}

.message-item-image-item{
    width:210rpx;
    height:210rpx;
    border-radius:10rpx;
    margin-bottom: 16rpx;
    background-color: ghostwhite;
}

.message-item-image-item:nth-child(3n-1) {
    margin-left: 16rpx;
    margin-right: 16rpx;
}
.giveHeartView{
    width: 200rpx;
    height: 50rpx;
    display: flex;
    line-height: 50rpx;
    align-items:center;
    float: left
}
.giveHeartImgView{
    width: 70rpx;
    height: 70rpx;
    padding-top: 8rpx;
    box-sizing: border-box;
    line-height: 70rpx;
}
.giveHeartImg{
    width: 39rpx;
    height:34rpx;
}
.giveHeartNum{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(69,69,69,1);
    margin-left: -10rpx;
}
.giveCommentNum{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(69,69,69,1);
    margin-left: 10rpx;
}
.commentView{
    width: 200rpx;
    height: 50rpx;
    display: flex;
    align-items:center;
    float: left
}
.commentViewNum{
    margin-left: 17rpx;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(69,69,69,1);
}
.commentTextarea{
    padding-left: 10rpx;
    height: 70rpx;
    width: 84%;
    background: #fff;
    border-radius: 8rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    box-sizing: border-box;
    float: left;
}
.commentTextView{
    background: #F7F7F7;
    box-sizing: border-box;
    padding: 15rpx;
    width: 100%;
    height: 100rpx;
    position: absolute;
    left: 0;
}
.textareaPlaceholder{

}
.giveHeartList{
    box-sizing: border-box;
    width: 100%;
    max-height:118rpx;
    display: flex;
}
.giveHeartlistImg{
    align-items: center;
    display: flex;
    height: 30rpx;
    line-height: 30rpx;
    /* padding-top: 5rpx; */
}

.giveHeartlistView{
    word-break:break-all;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 564rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(69,69,69,1);
}
.commentContentView{
    float: left;
    text-align: center;
    height:70rpx;
    width: 80%;
    margin-left: 10%;
    line-height: 70rpx;
    border-radius:8rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.commentContentRed{
    background:rgba(238,111,105,1);
}
.commentContentWhite{
    background:rgba(195,197,200,1);
}
.extraBottomview{
    background: #F8FAFC;
    margin-top: 40rpx;
    padding: 24rpx 45rpx 24rpx 20rpx;
    border-radius:10px;
}
.message-item-line{
    height:1rpx;
    background:rgba(238,238,238,1);
    margin-top: 27rpx;
    margin-bottom: 27rpx;
}
.extraBottomview-commentView{
    margin-bottom: 15rpx;
}
.extraBottomview-text1{
    font-size:26rpx;
    font-family:PingFang-SC-Regular;
    color:#EE6F69;
